<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="users">

	<resultMap type="uVo" id="uResultMap">
		<result column="u_id" property="id" />
		<result column="u_pw" property="pw" />
		<result column="u_name" property="name" />

	</resultMap>

	<select id="uIdCheck" parameterType="String" resultMap="uResultMap">
		select * from users where u_no= #{u_id}
	</select>

	<insert id="uInsert" parameterType="uVo">
		insert into users(u_id, u_pw, u_name)
		values(#{id} , #{pw} , #{name})
	</insert>

	<select id="uSelect" resultMap="uResultMap">
		select * from users
	</select>

	<delete id="uDelete" parameterType="String">
		delete users where u_id = #{id}
	</delete>

	<update id="uUpdate" parameterType="uVo">
		update users
		set u_id=#{id} , u_pw=#{pw} , u_name=#{name}
		where u_id = #{id}
	</update>

</mapper>
